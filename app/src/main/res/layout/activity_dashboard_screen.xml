<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bini.chemrx.DashboardScreen">

    <Button
        android:id="@+id/b_scan_code"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="ScanCode"
        android:textSize="15dp" />

    <Button
        android:id="@+id/b_enter_manually"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Enter Manually"
        android:textSize="15dp" />

    <Button
        android:id="@+id/b_History"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="History"
        android:textSize="15dp" />


    <Button
        android:id="@+id/b_profile"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Profile"
        android:textSize="15dp" />

</LinearLayout>
